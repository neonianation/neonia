<%= render partial: "home" %>

<div id="call-to-action" class="well not-rounded">
  
  <h1 class="bold larger"
       data-150-center-top="left: 200%; opacity: 0.0;"
       data-50-center-top="left: 0%; opacity: 1.0;"
       data-anchor-target="#call-to-action"
      
      >We are building <span class="emphasis">Neonia</span></h1>
  <h2 class="bold"
       data-150-center-top="right: 200%; opacity: 0.0;"
       data-50-center-top="right: 0%; opacity: 1.0;"
       data-anchor-target="#call-to-action"
      
      >a global, borderless, online country dedicated to empowering every human being to flourish.</h2>
  
  <hr style="border-bottom:1px solid black;"/>

  <% u_count = User.count %>
    <h3 class="bold text-center">
      <span class="Single"
            data-bottom-top="a"
            data-center-top="a"
            data-emit-events
            ><%= u_count %></span> people have already joined us. <span class="emphasis">With you we could be <%= u_count+1 %>.</span></h3>
  
    <div class="row user-samples">
      

      <% @member_sample.each_with_index do |member, index| %>
        <% if index%3 == 0 && index != 0%>
          <div class="clearfix visible-xs-block"></div>
        <% end %>
      
        <div class="user-image col-xs-4 col-sm-2 col-md-2 col-lg-2"><%= image_tag member.photo %></div>
      <% end %>
    </div>

    <br/>
  
    <p class="text-center"
        data--50-bottom-top="transform: scale(0); opacity: 0.0;"
        data--100-bottom-top="transform: scale(1); opacity: 1.0;"
       >

      <a target="_blank" href="#join-us" class="btn btn-lg btn-danger text-center">Join Neonia</a>
    </p>  
</div>
  
<%= render partial: "new_world" %>
<%= render partial: "action_plan" %>
<%= render partial: "join_us" %>