#home {
  background: url(<%= asset_data_uri 'backdrop.jpg' %>) no-repeat center center fixed;
  background-size: cover;
 
  h1 {
    color: rgba(255,255,255,1);
    text-shadow: 0px 0px 10px rgba(0, 0, 0, 1), 0px 0px 5px rgba(0, 0, 0, .6);
  }
  
  // dark overlay over background picture
  .overlay {
    background-color: rgba(0, 0, 0, .5);
    display: table;
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    width: 100%;
    
    > div {
        padding: 10% 15%; 
    }
  }
}

// page/section style. .page wraps around div so that we can have accurate scrollspy and scrolling behavior that is ruined by fixed navbar otherwise
.page {
  padding: 0%;
  margin: 0%;
  width: 100%; 
  position: relative;
  top: -41px;
  padding-top: 41px;
  margin-bottom: -41px;
  overflow-x: hidden;
  
  > div {
    padding: 3% 15%;
    width: 100%; 
    position: relative;
    overflow-x: hidden;
    
    > hr {
      position: absolute;
      left: 0px;
      width: 100%;
      height: 5px;
      margin-top: 30px;
      border-top: 1px solid;
      border-bottom: 1px solid;
      z-index: 1;
    }
    
    > h1 > span {
      position: relative;
      z-index: 2;
      background-color: white;
      margin-left: -15px;
      padding-left: 15px;
      padding-right: 15px;
    }
  }
}

#new-world {
  @extend .page;
  
  
  // hover icons that look beautiful
  .hover-icon {
    background-color: #E3E3E3;
    width: 70px;
    height: 70px;
    padding: 25px 0px;
    border-radius: 999px;
    text-align: center;
    position: relative;
    transition: all .2s cubic-bezier(0.5, -0.7, 0.67, 0.7);
    margin: auto; // center horizontally
    margin-top: 20px;
  }
  
  .hover-icon.active {
    background-color: $brand-danger; 

    //@include gradient-vertical($brand-danger, darken($brand-danger, 5%));
    transform: scale(1.1);
    
    box-shadow: 0px 0px 4px rgba(217, 83, 79,.7);
    
    color: white;
    
    .round-icon {
      //border: none;
      border-color: darken($brand-danger, 10%); 
    }
  }
  
  .round-icon {
    //background: url(<%= asset_data_uri 'neonia_label.svg' %>) no-repeat center center;
    background-size: contain;
    background-repeat: no-repeat;
    width: 100%;
    height: 100%;
    border-radius: 999px;
    border: 1px solid lightgray;
    text-align: center;
    position: absolute;
    left: 0px;
    top: 0px;
    margin: auto; // center horizontally
    padding-top: 15px;
    text-align: center;
    display: inline-block;
    transition: transform .2s cubic-bezier(0.5, -0.7, 0.67, 0.7);
    font-size: 30px;
  }
  
  .hover-icon:not(.active):hover {
    background-color: $brand-danger;
    color: white;
    transition: none;
    cursor: pointer;
    
    .round-icon {
      border-color: $brand-danger;
      transform: scale(1.2);
      transition: none;
    }
  }
  

}

#action-plan {
  @extend .page;
}

