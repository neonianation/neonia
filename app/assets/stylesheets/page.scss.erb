#home {
  background: url(<%= asset_data_uri 'backdrop.jpg' %>) no-repeat center center fixed;
  background-size: cover;
 
  h1 {
    color: rgba(255,255,255,1);
    text-shadow: 0px 0px 10px rgba(0, 0, 0, 1), 0px 0px 5px rgba(0, 0, 0, .6);
  }
  
  // dark overlay over background picture
  .overlay {
    background-color: rgba(0, 0, 0, .5);
    display: table;
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    width: 100%;
    padding: 10% 15%;
    
    // create spacing so that header is never over text if screen size is small or extra-small
    .spacing {
      //min-height: 50px;
    }
  }
}

.page {
  padding: 3% 15%;
  width: 100%; 
  position: relative;
}

#new-world {
  @extend .page;
  
  .hover-icon {
    background-color: #E3E3E3;
    width: 70px;
    height: 70px;
    padding: 25px 0px;
    border-radius: 999px;
    text-align: center;
    position: relative;
    transition: all .2s cubic-bezier(0.5, -0.7, 0.67, 0.7);
    margin: auto; // center horizontally
    margin-top: 20px;
  }
  
  .hover-icon::before {
    content: "test";
  }
  
  .round-icon {
    background: none;
    width: 100%;
    height: 100%;
    border-radius: 999px;
    border: 1px solid lightgray;
    text-align: center;
    position: absolute;
    left: 0px;
    top: 0px;
    display: inline-block;
    transition: transform .2s cubic-bezier(0.5, -0.7, 0.67, 0.7);
  }
  
  .hover-icon:hover {
    background-color: darkred;
    color: white;
    transition: none;
  }
  
  .round-icon:hover {
    transform: scale(1.2);
    transition: none;
  }
}

#action-plan {
  @extend .page;
}

#join-us {
  @extend .page;
}