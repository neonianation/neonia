#home {
  background: url(<%= asset_data_uri 'backdrop.jpg' %>) no-repeat center center fixed;
  background-size: cover;
 
  h1 {
    color: rgba(255,255,255,1);
    text-shadow: 0px 0px 10px rgba(0, 0, 0, 1), 0px 0px 5px rgba(0, 0, 0, .6);
    
    .main {    
      .larger {
        font-size: 45pt;
      }
      
      div:nth-of-type(1) {
        text-align: left;
      }
      
      div:nth-of-type(2) {
        text-align: center;
      }
      
      div:nth-of-type(3) {
        text-align: right;
        font-size: 60pt;
      }
    }
    
  }
  
  // dark overlay over background picture
  .overlay {
    background-color: rgba(0, 0, 0, .5);
    display: table;
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    width: 100%;
    
    > div {
        padding: 10% 15%; 
    }
    
    // add extra space on mobile devices
    .spacing {
      height: 70px;
      width: 100%;
      content: "";
    }
  }
}

// spacing between home and first section
#spacing {
  height: 50px;
  width: 100%;
  position: relative;
}

// page/section style. .page wraps around div so that we can have accurate scrollspy and scrolling behavior that is ruined by fixed navbar otherwise
.page {
  padding: 0px;
  margin: 0px;
  width: 100%; 
  position: relative;
  top: -41px;
  margin-bottom: -41px;
  overflow-x: hidden;
  
  > div {
    padding: 3% 15%;
    width: 100%; 
    position: relative;
    overflow-x: hidden;
    
    > hr:first-of-type {
      position: absolute;
      left: 0px;
      width: 100%;
      height: 5px;
      margin-top: 30px;
      border-top: 1px solid;
      border-bottom: 1px solid;
      border-color: $brand-danger;
      z-index: 1;
    }
    
    > h1 {
      color: $brand-danger;
      
      > span {
        position: relative;
        z-index: 2;
        background-color: white;
        margin-left: -15px;
        padding-left: 15px;
        padding-right: 15px;
      }
    }
  }
}

#new-world {
  @extend .page;
  
  
  // hover icons that look beautiful
  .hover-icon {
    background-color: #E3E3E3;
    width: 70px;
    height: 70px;
    padding: 25px 0px;
    border-radius: 999px;
    text-align: center;
    position: relative;
    transition: all .2s cubic-bezier(0.5, -0.7, 0.67, 0.7);
    margin: auto; // center horizontally
    margin-top: 20px;
  }
  
  .hover-icon.active {
    background-color: $brand-danger; 

    //@include gradient-vertical($brand-danger, darken($brand-danger, 5%));
    transform: scale(1.1);
    
    box-shadow: 0px 0px 4px rgba(217, 83, 79,.7);
    
    color: white;
    
    .round-icon {
      //border: none;
      border-color: darken($brand-danger, 10%); 
    }
  }
  
  .round-icon {
    //background: url(<%= asset_data_uri 'neonia_label.svg' %>) no-repeat center center;
    background-size: contain;
    background-repeat: no-repeat;
    width: 100%;
    height: 100%;
    border-radius: 999px;
    border: 1px solid lightgray;
    text-align: center;
    position: absolute;
    left: 0px;
    top: 0px;
    margin: auto; // center horizontally
    padding-top: 15px;
    text-align: center;
    display: inline-block;
    transition: transform .2s cubic-bezier(0.5, -0.7, 0.67, 0.7);
    font-size: 30px;
  }
  
  .hover-icon:hover {
    background-color: $brand-danger;
    color: white;
    transition: none;
    cursor: pointer;
    
    .round-icon {
      border-color: $brand-danger;
      transform: scale(1.2);
      transition: none;
    }
  }
  
  // tab menu
  .tab-content {

    margin-top: 30px;
    
    .tab-pane {
      visibility: visible !important;
    }

    .tab-pane.in {
      display: block;
    }
    
    .tab-pane:not(.activated) {
      display: none !important; 
    }

  }
  
  
}

#action-plan {
  @extend .page;
  
  // down arrow div
  .arrow {
    text-align: center;
    font-size: 2em;
    color: rgba(0,0,0,.3);
    text-shadow: 0px 0px 5px rgba(0,0,0,.3);
  }
  
  // fix bootstrap panel
  .panel {
    margin-bottom: 10px; 
    .label {
      float: right;
      padding: 0.4em;
    }
    
    .panel-heading, .panel-quote, .panel-body {
      margin-left: 50px;
      border-left: 1px solid #DDD;
      border-top-left-radius: 0px; // remove left rounded border
      
      // increase margin if not phone
      @media (min-width: $screen-sm-min) {
        margin-left: 80px;
      }
      @media (min-width: $screen-md-min) {
        margin-left: 100px;
      }
    }
    
    // make panel-heading emphasized
    .panel-heading {
      background-color: $brand-danger;
      color: white;
    }
    
    .panel-quote {
      @extend .panel-heading;
      color: $text-color;
      background-color: #F5F5F5;
      border-color: #DDD;
    }
    
    // image
    .icon {
      float:left;
      width: 50px;
      height: 60px;
      font-size: 30px;
      text-align: center;
      padding-top: 20px;
      color: $brand-danger;
      
      // increase width if not phone
      @media (min-width: $screen-sm-min) {
        width: 80px;
      }
      @media (min-width: $screen-md-min) {
        width: 100px;
      }
      
      span {
        margin: auto;
      }
    }
  }
  
  // each step of the action plan
  .step {
    
    .icon {
      margin: auto;
      border-radius: 4px;
      border: 2px dashed black;
      width: 70px;
      height: 70px;
      text-align: center;
      font-size: $font-size-large + 5;
      line-height: 70px;
    }
  }
}

#join-us {
  @extend .page;
  
  .row > form > div:not(.clearfix) {
    padding-top: 20px;
    padding-bottom: 20px;
  }
  
  .photo {
    width: 100%;
    max-width: 150px;
    height: 150px;
    border-radius: 8px;
    background-repeat: no-repeat;
    background-position: center;
    border: 1px solid #CCC;
    box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset;
  }
  
  .upload-photo {
    @extend .photo;

    background-color: white;
    background-image: url(<%= asset_data_uri 'user_icon.png' %>);
    background-size: 150px 150px;
    transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
    
    > input {
      position: relative;
      padding: 0px;
      width: 100%;
      height: 100%;
      opacity: 0.0;
      z-index: 5;
      cursor: pointer !important;
    }
    
    .icon-upload {
      width: 100%;
      max-width: 200px;
      height: 200px;
      z-index: 1;
    }
    
    &:hover:after, &:focus:after, &:active:after, &.active:after {
      position: relative;
      top: -150px;
      left: 10px;
      font-family: 'icomoon';
      content: "\e9c3"; //upload icon
      color: $brand-danger;
      text-align: center;
      font-size: 30px;
    }
    
    &:focus, &:active, &.active {
      border-color: $brand-danger;
      box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(217, 83, 79, 0.6);
    }
  }
  
  #user-form {
    
    .social-connect {
      border-top: 2px solid $gray-light;
      button > span {
        font-size: 20px; 
      }
    }
    
    @media (min-width: $screen-md-min) {
      
      .social-connect { border-top: none; } 
      .input-fields { border-right: 2px solid $gray-light; }
    }
  }
  
  // social share buttons after you joined
  .social-share {
    
    margin-bottom: 10px;
    
    div {
      margin-bottom: 5px;
      margin-top: 5px;
      
    }
    
    // add transparent line right of icon
    .btn > span {
      margin-top: 2px;
      padding-bottom: 1px;
      padding-right: 5px;
      border-right: 1px solid rgba(255,255,255, .5);
    }
    
  }
  

  // create some spacing below clearfixes
  .clearfix.spacing {
    margin-bottom: 20px;
  }
  
  .happy {
    color: darken($brand-success, 10%); 
  }
}

