// "bootstrap-sprockets" must be imported before "bootstrap" and "bootstrap/variables"
@import "bootstrap-sprockets";
@import "bootstrap";

// import fonts
@font-face {
    font-family: 'BebasNeue';
    src:url(<%= asset_data_uri 'BebasNeue Bold.otf' %>);
    font-weight: bold;
    font-style: normal;  
}   

@font-face {
    font-family: 'BebasNeue';
    src:url(<%= asset_data_uri 'BebasNeue Light.otf' %>);
    font-weight: normal;
    font-style: normal;  
}   

@font-face {
    font-family: 'Montserrat';
    src:url(<%= asset_data_uri 'Montserrat-Regular.ttf' %>);
    font-weight: normal;
    font-style: normal;  
}


@import "page";

html {
  overflow-x: hidden; 
}

body {
  position: relative;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  min-width: 100%;
  min-height: 100%;
  overflow-x: hidden;
  
  h1, h2 {
    font-family: 'BebasNeue';
    font-weight: normal; 
  }
  
  p {
    font-family: 'Montserrat';
    font-weight: normal; 
  }
}


// navbar hover should be red
.navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus {
  color: $brand-danger;
}

// navbar active should be gray background
.navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active > a:hover, .navbar-default .navbar-nav > .active > a:focus {
  background-color: rgba(255, 255, 255, 0.3); 
}

.bold {
  font-weight: bold;
}




#backup {
  .fancy {
    line-height: 0.5;
    text-align: left;
  }
  .fancy span {
    display: inline-block;
    position: relative;  
  }
  .fancy span:before,
  .fancy span:after {
    content: "";
    position: absolute;
    height: 5px;
    border-bottom: 1px solid;
    border-top: 1px solid;
    border-color: inherit;
    top: 0;
    width: 5000px;
  }
  .fancy span:before {
    right: 100%;
    margin-right: 15px;
  }
  .fancy span:after {
    left: 100%;
    right: 0px;
    margin-left: 15px;
    overflow-x: hidden;
  }
}

// navbar styles
.navbar {    
  font-family: 'BebasNeue';
  font-weight: bold;
  font-size: $font-size-large;
  
  // only if collapsed show background
  @media (max-width: $screen-sm-min) {
    background-color: $gray-lighter !important;
    border-color: rgba(200, 200, 200, 1.0) !important;
  }
  
}

