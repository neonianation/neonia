html {
  overflow-x: hidden; 
}

body {
  position: relative;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  min-width: 100%;
  min-height: 100%;
  overflow-x: hidden;
  
  h1, h2, h3, .heading {
    font-family: 'BebasNeue';
  }
  
  .heading {
    font-size: 120%; 
    line-height: normal;
  }
  
  p, input, label {
    font-family: 'Montserrat';
    font-weight: normal; 
  }
  
  $header-height: 60px;
  //
  //#content {
  //  padding-bottom: $header-height + 30px;
  //}
  
  // sticky footer
  footer {
    position: relative;
    width: 100%;
    background-color: #E7E7E7;
    //height: $header-height;
    padding: 0 3%;
    padding-top: 10px;
    text-align: center;
    
    .title {
      font-size: 60px;
      padding: 20px 0px 0px 0px;
      margin: 0px;
      font-family: 'BebasNeue';
    }
    
    p {
      margin: 0px;
      padding: 0px 0px 20px 0px;
      margin-top: -10px;
    }
  }
  
}


// navbar hover should be red
.navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus {
  color: $brand-danger;
}

// navbar active should be gray background
.navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active > a:hover, .navbar-default .navbar-nav > .active > a:focus {
  background-color: rgba(255, 255, 255, 0.3); 
}

.bold {
  font-weight: bold;
}

.emphasis {
  color: $brand-danger;
}


#backup {
  .fancy {
    line-height: 0.5;
    text-align: left;
  }
  .fancy span {
    display: inline-block;
    position: relative;  
  }
  .fancy span:before,
  .fancy span:after {
    content: "";
    position: absolute;
    height: 5px;
    border-bottom: 1px solid;
    border-top: 1px solid;
    border-color: inherit;
    top: 0;
    width: 5000px;
  }
  .fancy span:before {
    right: 100%;
    margin-right: 15px;
  }
  .fancy span:after {
    left: 100%;
    right: 0px;
    margin-left: 15px;
    overflow-x: hidden;
  }
}

// navbar styles
.navbar {    
  font-family: 'BebasNeue';
  font-weight: bold;
  font-size: $font-size-large;
  
  // only if collapsed show background
  @media (max-width: $screen-sm-min) {
    background-color: $gray-lighter !important;
    border-color: rgba(200, 200, 200, 1.0) !important;
  }
  
  // fix right aligned buttons
  .navbar-right {
    padding: 9px 0px 9px 0px;
    margin: 0px;
  }
}

// correct navbar
.form-control:active, .form-control:focus {
  border-color: $brand-danger;
  box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(217, 83, 79, 0.6);
}

span.social-bar-fix {
  position: relative;
  top: -18px;
}

a.social-icon {
  opacity: .7;
  padding: 0px;
  margin: 0px 3px;
}

a.social-icon:hover, a.social-icon:focus {
  opacity: 1.0; 
}
